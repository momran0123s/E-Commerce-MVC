@model IEnumerable<E_Commerce.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<style>
    .cont {
        width: 80%;
        margin: 20px auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .h1 {
        text-align: center;
        color: #333;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    .thead {
        background-color: #333;
        color: #fff;
    }

    .th, .td {
        padding: 10px;
        text-align: left;
    }

    .th {
        text-transform: uppercase;
    }

    .tbody .tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .mine {
        width: 300px;
        height: auto;
        display: block;
        margin: 0 auto;
    }
</style>

<h1 class="text-center h1 mt-5">Manage Products</h1>

<p class="justify-content-center d-flex">
    <a asp-action="Create" class="btn btn-outline-dark m-3">Create New</a>
</p>
<div class="container-fluid cont">
<table class="table text-center ">
    <thead class="thead">
        <tr class="tr">
            <th class="th"> 
               Name
            </th>
                <th class ="th">
                Image
            </th>
                <th class="th">
                Description
            </th>
                <th class="th">
                Quantity
            </th>
                <th class="th">
                Price
            </th>
                <th class="th">
                Category
            </th>
                <th class="th"></th>
        </tr>
    </thead>
    <tbody class="tbody">
@foreach (var item in Model) {
        <tr class="tr">
            <td class="td">
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
                    <td class="td">
                    <img src="\@Html.DisplayFor(modelItem => item.Image)" class="w-100 mine" height="100px"/>
                </td>
                    <td class="td">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
                    <td class="td">
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
                    <td class="td">
                    @Html.DisplayFor(modelItem => item.Price) L.E
            </td>
                    <td class="td">
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
                    <td class="td">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success m-1" style="width:80px" >Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary m-1" style="width:80px">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger m-1" style="width:80px">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
